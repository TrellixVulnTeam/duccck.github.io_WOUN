extends layout.pug

block header
block content
  h3 Register
  form(action="/register" method="POST" enctype="multipart/form-data")
    label(for="username") Username
    input(id="username" type="text" name="username" value="" placeholder="" required)
    label(for="email") Email
    input(id="email" type="email" name="email" value="" placeholder="" required)
    label(for="password") Password
    input(id="password" type="password" name="password" value="" placeholder="" required)
    label(for="avatar") Avatar
    input(id="avatar" type="file" name="avatar")
    button Submit
    button Cancel